<!DOCTYPE html>
<html>
  <head>
    <title>TodoManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
     <div class="UserHeader">
        Welcome <%= @current_user.first_name %>!
        <p class="signout_heading">
          <%= link_to "Sign out", destroy_session_path, method:"delete", class:"links" %>
        </p>
      </div>
    <% end %>

    <% if flash[:error] %>
     <p class ="Flash-error">
        <%= flash[:error] %>
    </p>
    <% end %>


   <%= yield %>
  </body>
</html>
